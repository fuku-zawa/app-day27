.container
  %h2 Edit Board
  %ul
    - @board.errors.full_messages.each do |message|
      %li= message
  = form_with(model:@board,  local:true) do |f|
    -# %div
    -#   = f.label :eyecatch, "アイキャッチ"
    -# %div
    -#   = f.file_field :eyecatch
    .field
      %div
        = f.label :title, "Name"
      %div
        = f.text_field :title, class:"text", class: 'inputarea board-name'
    .field
      %div
        = f.label :content, "Description"
      %div
        = f.text_area :content, class: 'inputarea description'
    = f.submit "Submit" , class:"btn btn-warning submit-btn"
