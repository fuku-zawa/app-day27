.container
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .form-area 
      %ul
        %li.input-list
          .field
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'inputarea'
        %li.input-list
          .field
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password", class: 'inputarea'
        %li.input-list 
          .field
            = f.label :password_confirmation
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", class: 'inputarea'
        %li.input-list 
          .actions
            = f.submit "Sign up", class: 'btn btn-warning submit-btn'
  -# = render "devise/shared/links"
