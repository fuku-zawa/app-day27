.container
  %h2 Edit Task
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  = form_with(model:@task,  local:true) do |f|
    .field
      %div
        = f.label :eyecatch, "アイキャッチ"
      %div
        = f.file_field :eyecatch
    .field
      %div
        = f.label :title, "Name"
      %div
        = f.text_field :title, class:"text inputarea board-name"
    .field
      %div
        = f.label :content, "Content"
      %div
        = f.text_area :content, class: 'inputarea description'
    .field
      = f.label :deadline, "Deadline"
      %div
        = f.date_field :deadline, class:'board-name inputarea'
    = f.submit "Submit" , class:"btn btn-warning submit-btn"
